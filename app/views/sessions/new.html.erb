
<% if current_user %>
  <h1><%= current_user.name %> is logged in.</h1>
  <%= link_to "Logout", "/logout", class: "btn btn-danger" %>
<% else %>
  <h1>Login</h1>
  <%= form_tag '/login', method: :post do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <%= submit_tag "Login", class: "btn btn-info" %>
  <% end %>
<% end %>
<%= link_to "Go to Main Page", "/", class: "btn btn-default" %>
